{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS", 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "moduleResolution": "node", // Set the module resolution to "node".
  "baseUrl": "./", // Set the base URL to the root directory.
  "paths": {
    "*": ["*.js"] // Automatically append .js to import paths.
  }
}